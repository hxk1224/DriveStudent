<?xml version="1.0" encoding="utf-8"?>
<com.scaleview.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">

    <com.scaleview.ScaleLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.scaleview.ScaleTextView
            android:id="@+id/copy_tv"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_60dp"
            android:background="@color/main_black_color"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/copy"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_30sp"/>

        <com.scaleview.ScaleTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginLeft="@dimen/dimen_1dp"
            android:background="@color/main_black_color"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_30sp"/>
    </com.scaleview.ScaleLinearLayout>
</com.scaleview.ScaleLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mylayout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:focusableInTouchMode="true"
              android:background="@color/black"
              android:weightSum="51"
              android:orientation="vertical">

    <com.drive.student.util.cropper.CropImageView
        android:id="@+id/CropImageView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/button_close"
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:onClick="closeButton"
            android:background="@drawable/selector_image_detail_turn"
            android:src="@drawable/common_photo_cancle"/>

        <ImageView
            android:id="@+id/button_rotate_left"
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:background="@drawable/selector_image_detail_turn"
            android:src="@drawable/common_photo_rotate_left"/>

        <ImageView
            android:id="@+id/button_rotate_right"
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:background="@drawable/selector_image_detail_turn"
            android:src="@drawable/common_photo_rotate_right"/>

        <ImageView
            android:id="@+id/Button_crop"
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:background="@drawable/selector_image_detail_turn"
            android:src="@drawable/common_photo_ok"/>
    </LinearLayout>

</LinearLayout>


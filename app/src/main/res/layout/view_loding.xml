<?xml version="1.0" encoding="utf-8"?>
<com.scaleview.ScaleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@color/app_bg">

    <com.scaleview.ScaleLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.scaleview.ScaleImageView
            android:id="@+id/loadingImageView"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:background="@anim/publicloading"/>

        <com.scaleview.ScaleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="@string/xlistview_header_hint_loading"
            android:textColor="@color/green_color"
            android:textSize="@dimen/dimen_28sp"/>
    </com.scaleview.ScaleLinearLayout>

</com.scaleview.ScaleRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.scaleview.ScaleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/main_blue_color">

    <com.scaleview.ScaleTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        android:gravity="center"
        android:text="预约教练"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_42sp"/>

    <com.scaleview.ScaleImageView
        android:id="@+id/search_iv"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:src="@drawable/search_selector"/>
</com.scaleview.ScaleRelativeLayout>
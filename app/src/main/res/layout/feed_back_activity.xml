<?xml version="1.0" encoding="utf-8"?>
<com.scaleview.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:background="@color/light_gray_line_color"
                                 android:orientation="vertical">

    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"/>

    <com.scaleview.ScaleRelativeLayout
        android:id="@+id/feed_back_type_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@color/white">

        <com.scaleview.ScaleTextView
            style="@style/mycenter_text_left"
            android:text="反馈类型"
            android:textSize="@dimen/dimen_32sp"/>

        <com.scaleview.ScaleImageView
            android:id="@+id/scaleImageView1"
            android:layout_width="@dimen/dimen_14dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:src="@drawable/right_arraw"/>

        <com.scaleview.ScaleTextView
            android:id="@+id/feed_back_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_13dp"
            android:layout_toLeftOf="@+id/scaleImageView1"
            android:gravity="center"
            android:text="你的新需求"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/dimen_32sp"/>
    </com.scaleview.ScaleRelativeLayout>

    <com.scaleview.ScaleTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/line_bg"/>

    <com.scaleview.ScaleFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_15dp">

        <com.scaleview.ScaleEditText
            android:id="@+id/feed_back_content_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300dp"
            android:background="@color/white"
            android:gravity="left|top"
            android:hint="@string/feed_back_hint_notice"
            android:maxLength="100"
            android:textColor="@color/main_black_color"
            android:textSize="@dimen/dimen_30sp"/>

        <com.scaleview.ScaleTextView
            android:id="@+id/input_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right|bottom"
            android:text="0/100"
            android:textColor="@color/main_gray_color"
            android:textSize="@dimen/dimen_30sp"/>
    </com.scaleview.ScaleFrameLayout>

    <com.scaleview.ScaleTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/line_bg"/>

    <com.scaleview.ScaleEditText
        android:id="@+id/phone_mail_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入您的手机号/邮箱等(选填)"
        android:maxLength="100"
        android:padding="@dimen/dimen_10dp"
        android:textColor="@color/main_black_color"
        android:textSize="@dimen/dimen_30sp"/>

</com.scaleview.ScaleLinearLayout>